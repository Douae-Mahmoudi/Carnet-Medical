// tsconfig.json (à la racine de votre projet)
{
  "compilerOptions": {
    "target": "es2020", // Mis à jour de "es5" à "es2020" pour permettre l'itération sur Set et d'autres fonctionnalités modernes
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
